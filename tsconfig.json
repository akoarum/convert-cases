{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "es2017", "es2018", "es2019", "es2020", "es2021", "dom"],
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
